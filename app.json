{
  "expo": {
    "name": "VitalPath",
    "slug": "vitalpath",
    "owner": "jeremiahkwesi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "vitalpath",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.jeremiahkwesi.vitalpath",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We use the camera to scan food barcodes and analyze meal images.",
        "NSPhotoLibraryUsageDescription": "We use the photo library so you can pick meal images and set your profile picture.",
        "NSPhotoLibraryAddUsageDescription": "We may save images to your library for exports.",
        "NSMotionUsageDescription": "We use motion data to sync your daily steps.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.jeremiahkwesi.vitalpath",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "backgroundColor": "#ffffff",
      "themeColor": "#007AFF"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow VitalPath to access your photos to analyze meals and set your profile picture."
        }
      ],
      "expo-barcode-scanner"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bf4737b1-1669-4cfd-94f8-83fbe99c880a"
      }
    }
  }
}
